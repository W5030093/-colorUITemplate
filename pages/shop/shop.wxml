<!--index.wxml-->
<view>
  <cu-custom bgColor="bg-gradual-blue">
    <view slot="content">商店详情</view>
  </cu-custom>
  <view style='display:flex;'>
    <view style='width:20%;height:200rpx;'>
      <view style='padding-top:50rpx;'>
        <view class="cu-avatar xl round" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big10001.jpg"></view>
      </view>

    </view>
    <!--右边部分-->
    <view style='width:80%;height:200rpx;margin-top:15%;'>
      <!--右上部分-->
      <view class='top_1'>
        <text>昵称</text>
        <text>2019年06月05日</text>
        <!--右下部分-->
        <view class='top_2'>
          <image src='{{picresource}}' data-src="{{picresource}}" bindtap='previewPic' style='width:30%;height:200rpx;padding:1.5%;' wx:for="{{[1,2,3,4,5,6,7,8,9]}}"></image>
        </view>
        <view style='display:flex;'>
        <text class="cuIcon-location lg text-gray" style='padding-top:10rpx;'></text>
        <text style='color:blue;font-size:30rpx;'>铭泰楼</text>
        </view>             
        <view style='display:flex;height:200rpx;' wx:for="{{[1,2,3,4,5,6,7,8,9]}}">
          <view style='width:30%;background:red;'>
            <image src='../../images/1.jpg' style='width:100%;height:200rpx;'></image>
          </view>
          <view style='width:70%'>
            <view style='width:70%;display:flex;flex-direction:column;padding-left:10%;'>
              <text>用户名</text>
              <text>留言板</text>
              <text>时间</text>
            </view>

          </view>
        </view>
      </view>
    </view>
  </view>
</view>